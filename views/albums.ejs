     <body ng-app="HomepageModule" ng-controller="AlbumsController" ng-cloak>
     
 
     
     <% var Myid='0'%>
    <% if (req.session.passport) { %>
			<% if (req.session.passport.user) { %>
			<% Myid=req.session.passport.user;%>
			<% } %>
	<% } %>

    
 <%- include('partials/navbar',{userid:Myid,Myid:Myid}); %>
       <div  ng-show="User.Invisible" style="background-color:black;z-index:999;width:100%;height:100%;opacity:0.9;position:fixed;left:0;top:50;">
	</div>
   <h3>Albums</h3>
   	<button ng-click="createalbum(User.id)" class="btn btn-lg btn-success" >Create New Album</button>
			
   
		<% if (req.session.passport) { %>
			<% if (req.session.passport.user) { %>
			<div ng-init="joinImOnlineRoom()"></div>
			<div ng-init="getuser('<%-req.session.passport.user%>')"></div>
   	
	 <div ng-init="getalbums('<%-req.session.passport.user%>')"></div>
	
	<div  style="display:flex" ng-repeat="album in myalbums track by $index">
	<span>
	<a href="/album/{{album.id}}"><h1> {{album.name}}</h1></a>
	
	</span>
	<span>
	Created at {{album.phrase}}<br>
		

	</span>
	
	</div>
	    		<% } %>
	<% } %>
	</body>

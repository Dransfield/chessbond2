     <body ng-app="HomepageModule" ng-controller="ConfirmDeleteController" ng-cloak>
   <%- include partials/navbar.ejs %>
   <h3>Enter your password to confirm Account deletion</h3>
 <% if (req.session.passport) { %>
			<% if (req.session.passport.user) { %>
			<div ng-init="joinImOnlineRoom()"></div>
			<div ng-init="getuser('<%-req.session.passport.user%>')"></div>
   		<% } %>
	<% } %>
			
	<form ng-show="User" name="form" ng-submit="confirmdelete()" role="form">
	 <span class="form-group" ng-class="{ 'has-error': form.password.$dirty && form.password.$error.required }">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" ng-model="vm.password" required />
            <span ng-show="form.password.$dirty && form.password.$error.required" class="help-block">Password is required</span>
        </span>
        <span class="form-actions">
            <button type="submit" ng-disabled="form.$invalid || vm.dataLoading" class="btn btn-primary">Confirm</button>
            <img ng-if="vm.dataLoading" src="data:image/gif;base64," />
        </span>
       </form>
	</body>
</html>

